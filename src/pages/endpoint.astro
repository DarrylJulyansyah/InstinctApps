                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label for="basicpill-companyuin-input">OS Name </label>
                                                    <input type="text" class="form-control" id="basicpill-companyuin-input" placeholder="Enter OS Name ">
                                                </div>
                                            </div>
    
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    <label for="basicpill-declaration-input">Protection manager</label>
                                                    <input type="text" class="form-control" id="basicpill-Declaration-input" placeholder="Protection manager Details">
                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    </form>
                                </section>
    
                                <!-- Company Document -->
                                <section id="display-2" style="display: none">
                                    <br>
                                    <h3>Endpoint User</h3>
                                    <form>
                                        <div class="row">
                                            <div class="col-lg-6">
